{
    "name": "hypersender/hypersender-laravel",
    "description": "A robust Laravel SDK for interacting with the Hypersender Api.",
    "keywords": [
        "Hypersender",
        "laravel",
        "hypersender-laravel"
    ],
    "homepage": "https://github.com/hypersender/hypersender-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "hypersender",
            "email": "info@hypersender.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0||^12.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^7.0|^8.0|^9.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.0|^3.0|^4.0",
        "pestphp/pest-plugin-arch": "^2.0|^3.0|^4.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0|^4.0"
    },
    "autoload": {
        "psr-4": {
            "Hypersender\\Hypersender\\": "src/",
            "Hypersender\\Hypersender\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hypersender\\Hypersender\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hypersender\\Hypersender\\HypersenderServiceProvider"
            ],
            "aliases": {
                "Hypersender": "Hypersender\\Hypersender\\Facades\\Hypersender"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
